<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomChatSrc.Pages.ChatRequestsPage"
             Title="Chat Requests">

    <StackLayout Padding="20">
        <!-- Display the requester's name and message -->
        <Label Text="{Binding RequesterName}"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               Margin="0,20,0,0" />

        <Label Text="{Binding RequestMessage}"
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               Margin="0,10,0,0" />

        <!-- Buttons for accepting or declining the request -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,30,0,0">
            <Button Text="Accept"
                    Clicked="AcceptButton_Clicked"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="10"/>

            <Button Text="Decline"
                    Clicked="DeclineButton_Clicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    Margin="10"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
